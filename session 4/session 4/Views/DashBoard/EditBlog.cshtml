@model session_4.ViewModel.BlogViewModel;

@{

    Layout = "_DashBoardLayout";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Edit Blog</span>
    </div>
    <div>
        <form asp-action="EditBlog" method="post" class="row">
            <div class="mb-3">
                <input asp-for="@Model.blog.Id" hidden />
                <label asp-for="@Model.blog.Name" class="form-label">Blog Name</label>
                <input asp-for="@Model.blog.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.blog.Name" class="text-danger"></span>


            </div>
            <div class="mb-3">
                <label asp-for="@Model.blog.Description" class="form-label">Blog Description</label>
                <textarea asp-for="@Model.blog.Description"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="@Model.blog.Description" class="text-danger"></span>

            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.blog.typeId" class="form-label">Blog Type</label>
                <select class="form-select "
                        asp-for="@Model.blog.typeId">
                    <option selected>Select one</option>
                    @{
                        foreach (var x in Model.types)
                        {

                            <option value="@x.Id">@x.Name</option>
                        }

                    }
                </select>
                <span asp-validation-for="@Model.blog.typeId" class="text-danger"></span>
            </div>

            <div class="mb-3 col-lg-6">

              
                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-success">Edit</button>

                </div>
        </form>

    </div>
</div>