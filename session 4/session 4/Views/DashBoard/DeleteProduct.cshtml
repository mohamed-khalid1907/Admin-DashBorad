@model Product;
@{
    Layout = "_DashBoardLayout";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Delete Product</span>
    </div>

    <div>
        <form asp-action="DeleteProduct" method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name"
                disabled
                       class="form-control"
                       placeholder="" />

            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Product Description</label>
                <textarea asp-for="Description"
                disabled
                          class="form-control"
                          placeholder=""></textarea>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Quantity" class="form-label">Product Quantity</label>
                <input asp-for="Quantity"
                disabled
                       class="form-control"
                       placeholder=""></input>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Price" class="form-label">Product Price</label>
                <input asp-for="Price"
                disabled
                       class="form-control"
                       placeholder=""></input>
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input disapled class="form-check-input" asp-for="EnableSize" />
                    <label disapled asp-for="EnableSize" class="form-check-label" for=""> Enable Product Size </label>
                </div>


            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="CompId" class="form-label">company</label>
                <select disabled class="form-select "
                
                        asp-for="CompId">
                    <option selected>Select one</option>
                    <option value="1">nike</option>
                    <option value="2">adidas</option>
                </select>
            </div>

           
            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-danger">Delete</button>

            </div>
        </form>

    </div>
</div>