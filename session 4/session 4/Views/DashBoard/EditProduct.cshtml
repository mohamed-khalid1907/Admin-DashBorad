@model Product;
@{
    Layout = "_DashBoardLayout";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Edit Product</span>
    </div>

    <div>
        <form asp-action="EditProduct" method="post" class="row">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Product Description</label>
                <textarea asp-for="Description"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Quantity" class="form-label">Product Quantity</label>
                <input asp-for="Quantity"
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Price" class="form-label">Product Price</label>
                <input asp-for="Price"
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="EnableSize" />
                    <label asp-for="EnableSize" class="form-check-label" for=""> Enable Product Size </label>
                </div>


            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="CompId" class="form-label">company</label>
                <select class="form-select "
                        asp-for="CompId">
                    <option selected>Select one</option>
                    <option value="1">nike</option>
                    <option value="2">adidas</option>
                </select>
                <span asp-validation-for="CompId" class="text-danger"></span>
            </div>

            
            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-success">Edit</button>

            </div>
        </form>

    </div>
</div>