@model ProductViewModel;
@{
    Layout = "_DashBoardLayout";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>

    <div>
        <form asp-action="CreateProduct" method="post" class="row">
            <div class="mb-3">
                <label asp-for="@Model.product.Name" class="form-label">Product Name</label>
                <input asp-for="@Model.product.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.product.Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="@Model.product.Description" class="form-label">Product Description</label>
                <textarea asp-for="@Model.product.Description"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="@Model.product.Description" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.product.Quantity" class="form-label">Product Quantity</label>
                <input asp-for="@Model.product.Quantity"
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="@Model.product.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.product.Price" class="form-label">Product Price</label>
                <input asp-for="@Model.product.Price"
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="@Model.product.Price" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="product.EnableSize" />
                    <label asp-for="@Model.product.EnableSize" class="form-check-label" for=""> Enable Product Size </label>
                </div>


            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.product.CompId" class="form-label">company</label>
                <select class="form-select "
                        asp-for="@Model.product.CompId">
                    <option selected>Select one</option>
                    @{
                        foreach(var x in Model.companies)
                        {
                            <option value="@x.Id">@x.Name</option>  
                        }
                    }
                </select>
                <span asp-validation-for="@Model.product.CompId" class="text-danger"></span>
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">ADD</button>

            </div>
        </form>

    </div>
</div>